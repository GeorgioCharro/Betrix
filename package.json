{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint -- --max-warnings=1",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "prepare": "test -d .git && husky install || echo 'Skipping husky in CI'",
    "db:generate": "cd packages/db && npx prisma generate && cd ../..",
"db:migrate": "cd packages/db && npx prisma migrate dev && cd ../..",
    "simulate:chicken-road": "node packages/common/game-utils/chicken-road/simulate.mjs"
},
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "^2.1.0"
  },
  "packageManager": "pnpm@9.9.0",
  "engines": {
    "node": ">=18"
  },
  "name": "simcasino",
  "lint-staged": {
    "**/!(*.eslintrc).{js,jsx,ts,tsx}": [
      "pnpm lint",
      "pnpm format"
    ],
    "**/.eslintrc.js": [
      "prettier --write"
    ],
    "**/*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
